<!-- app/views/news_articles/new.html.erb -->
<h1>New News Article</h1>

<%= form_with model: @news_article, url: news_articles_path do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :sub_topic %>
    <%= form.text_field :sub_topic %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.label :image %>
    <%= form.file_field :images, multiple: true %>
  </div>
  <div>
    <%= form.label :user_id %>
    <%= form.number_field :user_id %>
  </div>
  <div>
    <%= form.label :category %>
    <%= form.text_area :category_id %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
